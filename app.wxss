}
/* 背景 */
.bg-box {
   position: fixed;
   left: 0;
   top: 0;
   z-index: -1;
   
   width: 100%;
   height: 100%;
}
.bg-box image {
   vertical-align: middle;
}

/*字体*/
.fs24 {
   font-size: 24rpx;
   line-height: 1;
}
.fs28 {
   font-size: 28rpx;
   line-height: 1;
}
.fs30 {
   font-size: 28rpx;
   line-height: 1;
}
.fs32 {
   font-size: 32rpx;
   line-height: 1;
}

/*字体颜色*/
.co333 {
   color: #333;
}
.co939393 {
  color: #939393;
}

/*背景颜色*/
.backf5ae66 {
   background-color: #f5ae66;
}
.backf9f5eb {
  background-color: #f9f5eb;
}
.backf5f5f5 {
  background-color: #f5f5f5;
}
.backfff {
  background-color: #fff;
}

.fw {
  font-weight: bold;
}


/*图片100%*/
image {
   width: 100%;
   height: 100%;
}

/*定位布局*/
.pos-r{
   position: relative;
}

/*flex 布局样式*/
.flex {
   display: flex;
}
.flex-row {
   flex-direction: row;
}
.flex-col {
   flex-direction: column;
}
.flex-none {
   flex: none;
}
.flex-wrap {
   flex-wrap: wrap;
}

/*水平样式*/
.flex-as {
   align-items: flex-start;
}
.flex-ab {
   align-items: baseline;
}
.flex-ac {
   align-items: center;
}
.flex-ad {
   align-items: flex-end;
}

/*垂直样式*/
.flex-ja {
   justify-content: space-around;
}
.flex-js {
   justify-content: space-between;
}
.flex-jc {
   justify-content: center;
}
.flex-je {
   justify-content: flex-end;
}

/*按钮*/
.btn {
  display: flex;
  align-items: center;
  justify-content: center;
  position: fixed;
  left: 0;
  bottom: 0;
  width: 100%;
  height: 154rpx;
  background-color: #f5ae66;
}
.save {
  width: 147rpx;
  height: 67rpx;
}

/* 获取用户信息 */
.btn-user {
   position: fixed;
   top: 0;
   left: 0;
   z-index: 9999;
   width: 100%;
   height:100%;
   background-color: transparent;
}
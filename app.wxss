/**app.wxss**/

/* 背景 */
.bg-box {
   position: absolute;
   left: 0;
   top: 0;
   z-index: -1;
   
   width: 100%;
   height: 100%;
}
.bg-box image {
   vertical-align: middle;
}

/*字体*/
.fs24 {
   font-size: 24rpx;
   line-height: 1;
}
.fs28 {
   font-size: 28rpx;
   line-height: 1;
}
.fs32 {
   font-size: 32rpx;
   line-height: 1;
}

/*字体颜色*/
.co333 {
   color: #333;
}

/*图片100%*/
image {
   width: 100%;
   height: 100%;
}

/*定位布局*/
.pos-r{
   position: relative;
}

/*flex 布局样式*/
.flex {
   display: flex;
}
.flex-row {
   flex-direction: row;
}
.flex-col {
   flex-direction: column;
}
.flex-none {
   flex: none;
}
.flex-wrap {
   flex-wrap: wrap;
}

/*水平样式*/
.flex-as {
   align-items: flex-start;
}
.flex-ab {
   align-items: baseline;
}
.flex-ac {
   align-items: center;
}
.flex-ad {
   align-items: flex-end;
}

/*垂直样式*/
.flex-ja {
   justify-content: space-around;
}
.flex-js {
   justify-content: space-between;
}
.flex-jc {
   justify-content: center;
}
.flex-je {
   justify-content: flex-end;
}